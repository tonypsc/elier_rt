{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true,
		"jest/globals": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"linebreak-style": ["error", "windows"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"prefer-const": ["error"]
		//"no-console": ["error"]
		//"no-magic-numbers": ["error", { "ignoreArrayIndexes": true }]
	}
}
